<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.pushup">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pushups"
            android:fontFamily="sans-serif-medium"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/stars_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/stars"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"/>

        <ImageView
            android:id="@+id/stars_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/stars"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            app:layout_constraintStart_toEndOf="@id/stars_1"
            app:layout_constraintTop_toBottomOf="@id/title"/>

        <ImageView
            android:id="@+id/stars_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/stars"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            app:layout_constraintStart_toEndOf="@id/stars_2"
            app:layout_constraintTop_toBottomOf="@id/title"/>

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toEndOf="@id/stars_3"/>

        <TextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_pushup"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@id/level"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comment"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/body"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/total_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="59"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/comment"
            app:layout_constraintTop_toBottomOf="@id/body"/>

        <ImageView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/like"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/body"
            app:layout_constraintStart_toEndOf="@id/total_comments"/>

        <TextView
            android:id="@+id/total_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="358"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/like"
            app:layout_constraintTop_toBottomOf="@id/body"/>

        <ImageView
            android:id="@+id/usera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/usera"
            android:layout_marginTop="18dp"
            android:layout_marginRight="70dp"
            app:layout_constraintTop_toBottomOf="@id/body"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/userb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/userb"
            android:layout_marginTop="18dp"
            android:layout_marginRight="33dp"
            app:layout_constraintTop_toBottomOf="@id/body"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/more_user_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/morelike"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/body"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/more_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13+"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="27dp"
            android:layout_marginRight="7dp"
            app:layout_constraintTop_toBottomOf="@id/body"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>